<CodeSnippets xmlns="http://schemas.microsoft.com/VisualStudio/2005/CodeSnippet">
  <CodeSnippet Format="1.0.0">
    <Header>
      <Title>Get TotalResultCount (8.1+)</Title>
      <Shortcut>XrmControlsGetTotalResultCount</Shortcut>
      <Description>8.1+ Gets the count of results found in the search control."</Description>
      <HelpUrl>https://msdn.microsoft.com/en-us/library/dn932131.aspx#BKMK_getTotalResultCount</HelpUrl>
      <Author>Jason Lattimer</Author>
      <Keywords>
        <Keyword>Dynamics CRM</Keyword>
        <Keyword>CRM</Keyword>
        <Keyword>Controls</Keyword>
        <Keyword>2016</Keyword>
      </Keywords>
      <SnippetTypes>
        <SnippetType>Expansion</SnippetType>
      </SnippetTypes>
    </Header>
    <Snippet>
      <Code Language="JavaScript">
        <![CDATA[Xrm.Page.getControl("controlname").getTotalResultCount()$end$]]>
      </Code>
    </Snippet>
  </CodeSnippet>
</CodeSnippets>
