<CodeSnippets xmlns="http://schemas.microsoft.com/VisualStudio/2005/CodeSnippet">
  <CodeSnippet Format="1.0.0">
    <Header>
      <Title>Get Controls Count (5.0+)</Title>
      <Shortcut>XrmControlsGetLength</Shortcut>
      <Description>5.0+ Get the number of items in the collection of controls.</Description>
      <HelpUrl>https://msdn.microsoft.com/en-us/library/dn481592#BKMK_getLength</HelpUrl>
      <Author>Jason Lattimer</Author>
      <Keywords>
        <Keyword>Dynamics CRM</Keyword>
        <Keyword>CRM</Keyword>
        <Keyword>Controls</Keyword>
        <Keyword>2011</Keyword>
        <Keyword>2013</Keyword>
        <Keyword>2015</Keyword>
        <Keyword>2016</Keyword>
      </Keywords>
      <SnippetTypes>
        <SnippetType>Expansion</SnippetType>
      </SnippetTypes>
    </Header>
    <Snippet>
      <Code Language="JavaScript">
        <![CDATA[Xrm.Page.ui.controls.getLength()$end$]]>
      </Code>
    </Snippet>
  </CodeSnippet>
</CodeSnippets>
