<?xml version="1.0" encoding="utf-8" ?>
<CodeSnippets xmlns="http://schemas.microsoft.com/VisualStudio/2005/CodeSnippet">
  <CodeSnippet Format="1.0.0">
    <Header>
      <Title>ForEach QuickForm Controls (8.1+)</Title>
      <Shortcut>XrmUiQuickFormControlsForEach</Shortcut>
      <Description>8.1+ Apply an action in a delegate function to each object in the collection of quick view controls on a form.</Description>
      <HelpUrl>https://msdn.microsoft.com/en-us/library/gg327828.aspx#bkmk_quickForms</HelpUrl>
      <Author>Jason Lattimer</Author>
      <Keywords>
        <Keyword>Dynamics CRM</Keyword>
        <Keyword>CRM</Keyword>
        <Keyword>UI</Keyword>
        <Keyword>2016</Keyword>
      </Keywords>
      <SnippetTypes>
        <SnippetType>Expansion</SnippetType>
      </SnippetTypes>
    </Header>
    <Snippet>
      <Code Language="JavaScript">
        <![CDATA[Xrm.Page.ui.quickForms.forEach(
                function (qvcontrol, index) {
                }
            )$end$]]>
      </Code>
    </Snippet>
  </CodeSnippet>
</CodeSnippets>

