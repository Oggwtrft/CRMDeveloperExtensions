<?xml version="1.0" encoding="utf-8" ?>
<CodeSnippets xmlns="http://schemas.microsoft.com/VisualStudio/2005/CodeSnippet">
  <CodeSnippet Format="1.0.0">
    <Header>
      <Title>QuickForm IsLoaded (8.1+)</Title>
      <Shortcut>XrmUiQuickFormIsLoaded</Shortcut>
      <Description>8.1+ Returns whether the data binding for the constituent controls in a quick view control is complete.</Description>
      <HelpUrl>https://msdn.microsoft.com/en-us/library/mt736908.aspx#bkmk_isLoaded</HelpUrl>
      <Author>Jason Lattimer</Author>
      <Keywords>
        <Keyword>Dynamics CRM</Keyword>
        <Keyword>CRM</Keyword>
        <Keyword>UI</Keyword>
        <Keyword>2016</Keyword>
      </Keywords>
      <SnippetTypes>
        <SnippetType>Expansion</SnippetType>
      </SnippetTypes>
    </Header>
    <Snippet>
      <Code Language="JavaScript">
        <![CDATA[Xrm.Page.ui.quickForms.get("qvcontrolname").isLoaded()$end$]]>
      </Code>
    </Snippet>
  </CodeSnippet>
</CodeSnippets>

